# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug
API_SECRET_KEY=your_super_secret_api_key_change_this_in_production

# ============================================
# DATABASE
# ============================================
MONGODB_URI=.... 

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_too
JWT_REFRESH_EXPIRE=30d

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_CALLBACK=http://localhost:5000/api/auth/google/callback

# ============================================
# AWS S3 CONFIGURATION
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=omihorizn-documents
AWS_S3_REGION=us-east-1

# ============================================
# FLUTTERWAVE PAYMENT
# ============================================
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# EMAIL CONFIGURATION (Namecheap)
# ============================================
MAIL_HOST=mail.namecheap.com
MAIL_PORT=465

# Noreply account (transactional emails)
MAIL_NOREPLY_USER=noreply@omihorizn.com
MAIL_NOREPLY_PWD=your_namecheap_noreply_password

# Info account (support/informational emails)
MAIL_INFO_USER=info@omihorizn.com
MAIL_INFO_PWD=your_namecheap_info_password

# Admin email for system notifications
MAIL_ADMIN_EMAIL=admin@omihorizn.com

# ============================================
# GOOGLE GENKIT AI
# ============================================
GOOGLE_GENAI_API_KEY=your_google_genai_api_key

# ============================================
# FRONTEND URLS
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# REDIS (Optional - for caching & distributed locking)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=15m
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8081
